extends ../shared/template

block content

  h2 Your Monster
    h6.breadcrumb
      a(href='/chimeras') Back to All Monsters

  #one

    .chimera
      .head(style='background-image: url(/img/#{chimera.head})')
      .body(style='background-image: url(/img/#{chimera.body})')
      .feet(style='background-image: url(/img/#{chimera.feet})')
      .controls
        .name name:
          a(href='/chimeras/#{chimera._id}')= chimera.name
        .age age: #{chimera.age}
        .gender gender: #{chimera.gender}

        .delete
          form(action='/chimeras/#{chimera._id}/delete', method='POST')
            button.removeBtn Delete
