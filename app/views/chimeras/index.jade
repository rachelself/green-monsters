extends ../shared/template

block content

  #newChimera
    span(class='button-wrap')
      a(href='/chimeras/new', class='button button-pill') New Chimera
  #container
  h2 Your Oceanic Aliens
    #chimeras
      each chimera in chimeras
        .chimera
          .head
            img(src='/img/#{chimera.head}')
          .body
            img(src='/img/#{chimera.body}')
          .tail
            img(src='/img/#{chimera.tail}')
          .controls
            .name name:
              a(href='/chimeras/#{chimera._id}')= chimera.name
            .age age: #{chimera.age}
            .gender gender: #{chimera.gender}

            .delete
              form(action='/chimeras/#{chimera._id}/delete', method='POST')
                button.removeBtn Delete


